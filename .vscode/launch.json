    "version": "0.2.0",
    "configurations": [
        // For standalone script execution
        {
            "name": "Python: Zero Agent",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Isaac-Stack-Cube-Franka-v0",
                "--num_envs",
                "4"
            ],
            "program": "${workspaceFolder}/scripts/zero_agent.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
        },
        {
            "name": "Python: Random Agent",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Isaac-Stack-Cube-Franka-v0",
                "--num_envs",
                "4"
            ],
            "program": "${workspaceFolder}/scripts/random_agent.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
            "justMyCode": false,
        },
        {
            "name": "Python: Train",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Isaac-Stack-Cube-Franka-v0",
                "--num_envs",
                "1024",
                "--headless"
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/train.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
            "justMyCode": false
        },
        {
            "name": "Python: Play",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "--task",
                "Isaac-Stack-Cube-Franka-v0",
                "--num_envs",
                "16",
            ],
            "program": "${workspaceFolder}/scripts/rsl_rl/play.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.vscode/.python.env",
            "justMyCode": false
        },
    ]
}